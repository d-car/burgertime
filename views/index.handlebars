<link rel="stylesheet" type="text/css" href="/assets/css/style">

<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-3">Burger Time</h1>
      <p class="lead">Take a look at our current menu. If you don't see anything you like, add it yourself and munch!</p>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div clas="center col-sm-12">
      <img src="../assets/img/burger.png" id="burgerPic">
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="center col-sm-12" id="menu">
      <h2>Menu</h2>
    </div>
  </div>

  <div class="row">
    <div class="center col-sm-3">
      <h3>Available:</h3>  
        <ul>
          {{#each burgers}}
            {{#unless devoured}}

                {{> burgers/burgers-block}}

            {{/unless}}
          {{/each}}
        </ul>
    </div>

    <div class="center col-sm-3">
      <h3>Devoured:</h3>
        <ul>
        {{#each burgers}}
          {{#if devoured}}
            <div>{{burger_name}}</div>
          {{/if}}
        {{/each}}
        </ul>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h3>Whaddaya Want?</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <form class="create-form">
        <div class="form-group">
          <label for="bName">Your Burger Desire:</label>
          <input type="text" id="bName" name="name">
        </div>
        <button type="submit" class="btn btn-primary">Add Burger to Menu!</button>
        <button type="button" class="btn btn-danger">Delete All Burgers</button>
      </form>
    </div>
  </div>
</div>